@model TestingFinalExam.Models.UserModel


@{
    ViewData["Title"] = "Home Page";
}

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


<environment names="Development">
    <link rel="stylesheet" href="~/css/logincss.css" />
</environment>
<!------ Include the above in your HEAD tag ---------->

<body>


    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div class="fadeIn first">
                <i class="fas fa-user-tie"></i>
            </div>   
            <!-- Login Form -->
            <form asp-action="Index">
                <input type="text" id="first" class="fadeIn second" asp-for="firstname" placeholder="First name" required />
                @if (ViewBag.firstnameTrue == true)
                {
                 <div class="alert alert-danger  alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Danger!</strong> @Html.ValidationMessageFor(m => m.firstname)
                 </div>
                }
                <input type="text" id="last" class="fadeIn second" asp-for="lastname" placeholder="Last name" required />
                @if(ViewBag.lastnameTrue == true)
                {
                <div class="alert alert-danger  alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Danger!</strong> @Html.ValidationMessageFor(m => m.lastname)
                </div>
                }
                <input type="text" id="phone" class="fadeIn second" asp-for="phonenumber" placeholder="Phonenumber" required />
                @if(ViewBag.phonenumberTrue == true)
                {
                  <div class="alert alert-danger  alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Danger!</strong> @Html.ValidationMessageFor(m => m.phonenumber)
                  </div>
                }
                <input type="text" id="cpr" class="fadeIn second" asp-for="cprnumber" placeholder="CPR" required />
                @if(ViewBag.cprnumberTrue == true)
                {
                  <div class="alert alert-danger  alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Danger!</strong> @Html.ValidationMessageFor(m => m.cprnumber)
                  </div>
                }
                <input type="text" id="user" class="fadeIn third" asp-for="usertype" placeholder="User type" required />
                @if(ViewBag.usertypeTrue == true)
                {
                  <div class="alert alert-danger  alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Danger!</strong> @Html.ValidationMessageFor(m => m.usertype)
                  </div>
                }                
                <input type="submit" class="btn btn-primary" value="Continue" />
            </form>
        </div>
    </div>
</body>
